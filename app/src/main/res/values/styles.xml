<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">0sp</item>
        <item name="android:titleTextStyle">@style/CollapsingToolbarLayoutExpandedTextStyle.Title</item>
        <item name="android:subtitleTextStyle">@style/CollapsingToolbarLayoutExpandedTextStyle.Subtitle</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyDefButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="MyProgressDialog">
        <!--<item name="android:windowBackground">@null</item>-->
        <item name="android:windowFrame">@null</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:backgroundDimEnabled">false</item>

    </style>

</resources>
